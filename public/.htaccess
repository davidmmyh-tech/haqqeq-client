# Enable rewrite engine
RewriteEngine On
RewriteBase /

# Enable UTF-8 for Arabic support
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .htm .php .js .css

# Set default language to Arabic (optional; remove if not needed)
DefaultLanguage ar
AddLanguage ar .html .htm .php

# Route /api/* and /admin/* to Laravel
RewriteCond %{REQUEST_URI} ^/(api|admin)/
RewriteRule ^(api|admin)/(.*)$ api/public/index.php/$2 [L,QSA]

# If the request is not for an existing file/directory/link
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
# Rewrite all requests to index.html (for React SPA)
RewriteRule ^(.*)$ index.html [QSA,L]

# Options
Options -MultiViews

# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "SAMEORIGIN"
Header set Access-Control-Allow-Origin "*"

# Handle errors
ErrorDocument 404 /index.html

# Cache control
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
</FilesMatch>

<FilesMatch "\.(js|css|jpg|jpeg|png|gif|mp3)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>